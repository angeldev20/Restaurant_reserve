<%= simple_form_for(@restaurant, :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>
        <section class="imagebg space--sm" data-overlay="4">
                    <div class="background-image-holder" style="background: url(&quot;img/hero-1.jpg&quot;); opacity: 1;">
                        <img alt="background" src="img/hero-1.jpg">
                    </div>
                    <div class="container">
                        <div class="row">
                        <h3 class="text-center">Add a restaurant.</h3>
                            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                                <div class="row">
                                    <div class="boxed boxed--border">
                                        <form class="text-left form-email" data-success="Thanks for your enquiry, we'll be in touch shortly." data-error="Please fill in all fields correctly." novalidate="true">
                                            <div class="col-sm-6">
                                                <%= f.label :name, class: "col-form-label" %>
                                                <%= f.text_field :name, class: "form-control"%>
                                            </div>
                                            <div class="col-sm-6">
                                                <%= f.label :address, class: "col-form-label" %>
                                                <%= f.text_field :address, class: "form-control"%>
                                            </div>

                                            <div >
                                                <%= f.text_field :user_id, value: current_user.id%>
                                            </div>

                                            <div class="col-sm-6">
                                                <span>Email Address:</span>
                                                <input type="email" name="email" class="validate-required validate-email">
                                            </div>
                                            <div class="col-sm-6">
                                                <span>Phone:</span>
                                                <input type="tel" name="phone" class="validate-required">
                                            </div>
                                            <div class="col-sm-12">
                                                <span>About Restaurant:</span>
                                                <textarea rows="5" name="description" class="validate-required"></textarea>
                                            </div>
                                            <div class="col-sm-12 text-center boxed">
                                                <h5>Services Required</h5>
                                            </div>
                                            <div class="col-sm-3 col-xs-6 text-center">
                                                <span class="block">Design</span>
                                                <div class="input-checkbox">
                                                    <input type="checkbox" name="design" id="input-assigned-21">
                                                    <label for="input-assigned-21"></label>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 col-xs-6 text-center">
                                                <span class="block">Development</span>
                                                <div class="input-checkbox">
                                                    <input type="checkbox" name="dev" id="input-assigned-22">
                                                    <label for="input-assigned-22"></label>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 col-xs-6 text-center">
                                                <span class="block">Branding</span>
                                                <div class="input-checkbox">
                                                    <input type="checkbox" name="brand" id="input-assigned-23">
                                                    <label for="input-assigned-23"></label>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 col-xs-6 text-center">
                                                <span class="block">Marketing</span>
                                                <div class="input-checkbox">
                                                    <input type="checkbox" name="marketing" id="input-assigned-24">
                                                    <label for="input-assigned-24"></label>
                                                </div>
                                            </div>
                                            <div class="col-sm-12 text-center boxed">
                                                <h5>Approximate Budget</h5>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <div class="input-radio">
                                                    <span>&lt; $5,000</span>
                                                    <input type="radio" name="budget" value="under5k" class="validate-required" id="input-assigned-25">
                                                    <label for="input-assigned-25"></label>
                                                </div>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <div class="input-radio">
                                                    <span>$5,000 - $10,000</span>
                                                    <input type="radio" name="budget" value="5kto10k" class="validate-required" id="input-assigned-26">
                                                    <label for="input-assigned-26"></label>
                                                </div>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <div class="input-radio">
                                                    <span>$10,000+</span>
                                                    <input type="radio" name="budget" value="10kplus" class="validate-required" id="input-assigned-27">
                                                    <label for="input-assigned-27"></label>
                                                </div>
                                            </div>

                                            <div>
                                              <%= f.fields_for @attachment do |p| %>
                                                 <div class="field">
                                                   <span>Please upload your image</span>
                                                   <%= p.file_field :image, :multiple => true, name: "attachments[image][]" %>
                                                 </div>
                                               <% end %>
                                            </div>

                                             <br>
                                             <div>
                                              <%= f.fields_for :coupons, @coupon do |p|  %>
                                                <div class="field" >
                                                  <div class="col-sm-12">
                                                    <span>Please add a new coupon</span>
                                                  </div>
                                                    <div class="col-sm-6">
                                                      <%= p.label :start_date, class: "col-form-label" %>
                                                      <%= p.datetime_field :start_date, class: "form-control"%>
                                                    </div>

                                                    <div class="col-sm-6">
                                                      <%= p.label :end_date, class: "col-form-label" %>
                                                      <%= p.datetime_field :end_date, class: "form-control"%>
                                                    </div>

                                                    <div>
                                                      <% p.label :start_time, class: "col-form-label" %>
                                                      <% p.datetime_select :start_time, class: "form-control"%>
                                                    </div>

                                                    <div>
                                                      <% p.label :end_time, class: "col-form-label" %>
                                                      <% p.datetime_select :end_time, class: "form-control"%>
                                                    </div>

                                                    <div class="col-sm-6">
                                                      <%= p.label :value, class: "col-form-label" %>
                                                      <%= p.text_field :value, class: "form-control"%>
                                                    </div>

                                                    <div class="col-sm-6">
                                                      <%= p.label :coupon_detail, class: "col-form-label" %>
                                                      <%= p.text_field :coupon_detail, class: "form-control"%>
                                                    </div>

                                                    <div class="col-sm-6">
                                                      <%= p.label "Is Two Week Coupon?"%>
                                                      <%= p.check_box :two_week_coupon%>
                                                    </div>

                                                    <div class="col-sm-6">
                                                      <%= p.label "Is Month Coupon?", class: "col-form-label" %>
                                                      <%= p.check_box :month_coupon, class: "form-control"%>
                                                    </div>
                                                    
                                                </div>
                                              <%end%>
                                             </div>


                                            <div class="col-sm-12 boxed">
                                                <button type="submit" class="btn btn--primary type--uppercase">Submit Planner</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <!--end of row-->
                            </div>
                        </div>
                        <!--end of row-->
                    </div>
                    <!--end of container-->
                </section>
  


  <div class="form-inputs">
  </div>

  <div>
    
  </div>

  <div>
    <%= f.label :address, class: "col-form-label" %>
    <%= f.text_field :address, class: "form-control"%>
  </div>

  <div>
    <%= f.label :city, class: "col-form-label" %>
    <%= f.text_field :city, class: "form-control"%>
  </div>

  <div>
    <%= f.label :state, class: "col-form-label" %>
    <%= f.text_field :state, class: "form-control"%>
  </div>

  <div>
    <%= f.label :description, class: "col-form-label" %>
    <%= f.text_field :description, class: "form-control"%>
  </div>

  <div>
    <%= f.label :zipcode, class: "col-form-label" %>
    <%= f.text_field :zipcode, class: "form-control"%>
  </div>

  <div>
    <%= f.label :latitude, class: "col-form-label" %>
    <%= f.text_field :latitude, class: "form-control"%>
  </div>

  <div>
    <%= f.label :longitude, class: "col-form-label" %>
    <%= f.text_field :longitude, class: "form-control"%>
  </div>

  <div>
    <%= f.label :max_people, class: "col-form-label" %>
    <%= f.text_field :max_people, class: "form-control"%>
  </div>

  <div>
    <%= f.label :open_time, class: "col-form-label" %>
    <%= f.datetime_select :open_time, class: "form-control"%>
  </div>

  <div>
    <%= f.label :close_time, class: "col-form-label" %>
    <%= f.datetime_select :close_time, class: "form-control"%>
  </div>

  <div>
    <%= f.label :phone_number, class: "col-form-label" %>
    <%= f.text_field :phone_number, class: "form-control"%>
  </div>

  <div>
    <%= f.label :cost_range_min, class: "col-form-label" %>
    <%= f.text_field :cost_range_min, class: "form-control"%>
  </div>

  <div>
    <%= f.label :cost_range_max, class: "col-form-label" %>
    <%= f.text_field :cost_range_max, class: "form-control"%>
  </div>

  <div>
    <%= f.label :location, class: "col-form-label" %>
    <%= f.text_field :location, class: "form-control"%>
  </div>

  <div>
  <%= f.fields_for :attachments do |p| %>
     <div class="field">
       <%= p.label :image %><br>
       <%= p.file_field :image, :multiple => true, name: "attachments[image][]" %>
     </div>
   <% end %>
 </div>



  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
