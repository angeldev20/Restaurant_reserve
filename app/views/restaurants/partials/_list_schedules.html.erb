<div>   
    <ul class="row row--list clearfix text-center">
        
        <li class="col-sm-3 col-xs-6">
            <span class="h6 type--uppercase type--fade">Open</span>
            <span class="h3">14</span>
        </li>
        <li class="col-sm-3 col-xs-6">
            <span class="h6 type--uppercase type--fade">Closed</span>
            <span class="h3">2,129</span>
        </li>
        <li class="col-sm-3 col-xs-6">
            <span class="h6 type--uppercase type--fade">Views</span>
            <span class="h3">119</span>
        </li>
        <li class="col-sm-3 col-xs-6">
                <span class="h6 type--uppercase type--fade">Favorited</span>
                <span class="h3">220</span>
        </li>
    </ul>
    <div class="text-center">
            <i class=" icon-Scissor"></i>
            <%= link_to 'Add discount', new_restaurant_coupon_path(@restaurant)%>&nbsp;&nbsp;|&nbsp;&nbsp;
            <i class="icon-Pencil"></i>
            <%= link_to 'Edit location', edit_restaurant_path(@restaurant)%>&nbsp;&nbsp;|&nbsp;&nbsp;
            <i class="icon-Calendar-4"></i>
            <%= link_to 'Open bookings', reservation_path(@restaurant)%>&nbsp;&nbsp;|&nbsp;&nbsp;
            <i class="icon-Clock-4"></i>
            <%= link_to 'Closed bookings', restaurant_path(@restaurant)%>
    </div>
    <hr>
<div>
<span class="h5 text-center">Reservation Schedule</span>
<table class="table table-striped table-condensed table-hover border-round">
    <thead>
        <tr>
            <th>
                Day
            </th>
            <th>
                Schedule
            </th>
            <th>
                Discount
            </th>
            <th>
                Max Reservations
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        <% @restaurant.coupons.each do |coupon| %>
        <tr class="active">
            <td>
                <% if coupon.monday == true %>
                Monday<br>
                <% end %>
                <% if coupon.tuesday == true %>
                Tuesday<br>
                <% end %>
                <% if coupon.wednesday == true %>
                Wednesday<br>
                <% end %>
                <% if coupon.thursday == true %>
                Thursday<br>
                <% end %>
                <% if coupon.friday == true %>
                Friday<br>
                <% end %>
                <% if coupon.saturday == true %>
                Saturday<br>
                <% end %>
                <% if coupon.sunday == true %>
                Sunday<br>
                <% end %>
            </td>
            <td>
                <%= coupon.start_date.to_s(:time_formatted) %>-<%= coupon.end_date.to_s(:time_formatted) %>
            </td>
            <td><% if coupon.value.present? %>
                <%= coupon.value %>% Off
                <% else %>
                <% end %>
            </td>
            <td>
                <%= coupon.number %> allowed
            </td>
            <!-- <td>
            <i class="material-icons" style="vertical-align: middle; font-size: inherit;">mode_edit</i>    
            </td>
            <td>
            <i class="material-icons" style="vertical-align: middle; font-size: inherit;">mode_delete</i>    
            </td> -->
        
       
        <td><%= link_to 'Edit', edit_restaurant_coupon_path(@restaurant, coupon) %></td>
    </tr>
        <% end %>
    </tbody>
</table>
</div>
