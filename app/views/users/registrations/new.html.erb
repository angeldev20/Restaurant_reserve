<% unless user_signed_in? %>
<%= render 'layouts/nav_bar_logo_only' %>
<% end %>
            <section class="imageblock switchable feature-large height-100">
                <div class="imageblock__content col-md-6 col-sm-4 pos-right">
                    <div class="background-image-holder" data-overlay="7">
                        <%= image_tag "restaurant-1.jpg" %>
                    </div>
                </div>
                <div class="container pos-vertical-center">
                    <div class="row">
                        <div class="col-md-5 col-sm-7">
                        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
                            <h2>Create a Dinelyy account</h2>
                            <%= devise_error_messages! %>
                            <p class="lead">Save your favorite restaurants, and get reminders about your reservation.</p>
                            <a class="btn block btn--icon bg--facebook type--uppercase" href="#">
                                <span class="btn__text">
                                    <i class="socicon-facebook"></i>
                                    Sign up with Facebook
                                </span>
                            </a>
                            <a class="btn block btn--icon bg--googleplus type--uppercase" href="#">
                                <span class="btn__text">
                                    <i class="socicon-google"></i>
                                    Sign up with Google
                                </span>
                            </a>
                            <hr data-title="OR">
                            <form>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: 'Name'%>
                                    </div>                                   
                                    <div class="col-xs-12">
                                        <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail' %>
                                    </div>
                                    <div class="col-xs-12">
                                        <%= f.phone_field :phone, class: 'form-control', placeholder: 'Phone' %>
                                    </div>
                                    <div class="col-xs-12">
                                        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
                                    </div>
                                    <div class="col-xs-12">
                                        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
                                    </div>
                                    <div class="col-xs-12">
                                        <%= f.submit 'Create Account', :class => 'btn btn--primary type--uppercase' %>
                                        
                                    </div>
                                    <div class="col-xs-12">
                                        <span class="type--fine-print">By signing up, you agree to the
                                            <a href="#">Terms of Service</a>
                                        </span>
                                    </div>
                                </div>
                                <!--end row-->
                            </form>
                            <% end %>
                        </div>
                        
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
            