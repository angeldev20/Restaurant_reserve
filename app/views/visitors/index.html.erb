                                <div class="col-sm-2"><%= link_to "Find a Table", restaurants_path, :class => 'btn btn--primary type--uppercase' %> </button> 
                                
                                </div>
                            </form>
                        </div>
                        <p> or <%= link_to "browse all restaurants" , restaurants_path %></p>
                    </div>
                </div>
            </div>
        </section>
        <section class="space--sm text-center bg--secondary">
            <div class="container">
                <div class="row">
                    <div class="col-sm-10 col-md-8">
                        <h1>Top Restaurants, Best Deals.</h1>
                        <p class="lead">Check out these top restaurants now accepting reservations.  Just click your favorite restaurant and let's reserve a table before it's gone.</p>
                    </div>
                </div>
            </div>
        </section>
        <section class="space--sm bg--secondary">
            <div class="container">
                <div class="row">
                    <div class="masonry">
                        <div class="masonry-filter-container text-center">
                          <div class="masonry-filter-holder">
                            <div class="masonry__filters" data-filter-all-text="All Categories">
                              <ul>
                                <li class="active" data-masonry-filter="*">All Cuisines</li>
                              </ul>
                            </div>
                          </div>
                        </div>
                          <div class="masonry__container">
                            <% @restaurants.each do |restaurant| %>
                                <% restaurant.cuisines.each do |cuisine| %>
                            <%= link_to restaurant, :class => "block" do %> 
                                <div class="col-sm-3 masonry__item" data-masonry-filter="<%= cuisine.name %>">
                                    <div class="card card-1 boxed boxed--sm boxed--border">
                                        <div class="card__top">
                                            <div class="card__avatar">
                                                <span>
                                                    <strong><%= truncate(restaurant.name, :length => 21) %></strong>
                                                </span>
                                            </div>
                                            <div class="card__meta">
                                                <span class="color--primary"><strong>30% OFF</strong></span>
                                            </p>
                                            </div>
                                        </div>
                                        <div class="card__body">
                                            <%= link_to restaurant do %>
                                                <% restaurant.attachments.limit(1).each do |attachment| %>
                                                <%=image_tag attachment.image, class: "border--round", :style => "height: 151px; width: 226px; object-fit: cover; overflow: hidden;" %>
                                                <% end %>
                                            <% end %>

                                            <p><i class="material-icons">loyalty</i>
                                                $<%= restaurant.cost_range_min %>-<%= restaurant.cost_range_max %> per person
                                            </p>
                                        </div>
                                        <div class="card__bottom">
                                            <ul class="list-inline">
                                                <li>
                                                    <div class="card__action">
                                                        <a href="#">
                                                        <!-- <i class="material-icons">loyalty</i> -->
                                                            <span>$$</span>
                                                        </a>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="card__action">
                                                        <a href="#">
                                                            <i class="material-icons">star</i>
                                                            <span>4.5/5</span>
                                                        </a>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="card__action">
                                                        <a href="#">
                                                        <span><%= truncate(cuisine.name, :length => 10) %></span>
                                                        </a>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                            <% end %>
                            <% end %>
                          </div>
                        <!--end masonry__container-->
                        <div class="text-center">
                            <%= link_to restaurants_path, :class => 'btn' do %>
                            <span class="btn__text">Browse All Restaurants</span>
                            <% end %>
                        </div>
                    </div>
                    <!--end masonry-->
                </div>
                <!--end of row-->
            </div>
            <!--end of container-->
        </section>
